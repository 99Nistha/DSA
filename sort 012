  public static void sort012(int[] arr){
    //write your code here
    int i=0;
    int j=0;
    int n= arr.length;
    while(i<n){
        if(arr[i]==1) i++;
        else if(arr[i]==0){
            swap(arr, i,j);
            j++;
            i++;
        }else if(arr[i]==2){
            swap(arr, i,n-1);
            n--;
        }
    }
  }
