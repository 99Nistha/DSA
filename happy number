class Solution {
    public boolean isHappy(int n) {
        HashSet<Integer> seen= new HashSet<>();
        while(n!=1){//19
            int current= n;
            int sum=0;
            sum+=(current%10)*(current%10);
            current/=10;
            //sum is repeating or not
            if(seen.contains(sum)) return false;
            seen.add(sum);
            n= sum;
        }
        return true;
    }
}
