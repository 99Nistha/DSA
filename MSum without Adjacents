class Solution {
    int findMaxSum(int arr[], int n) {
        // code here
        int[][] dp= new int[2][n];
        dp[0][0]= arr[0];
        for(int i=1; i<n; i++){
            dp[0][i]= arr[i]+dp[1][i-1];
            dp[1][i]= Math.max(dp[0][i-1], dp[1][i-1]);
        }
        return Math.max(dp[0][n-1], dp[1][n-1]);
    }
}
